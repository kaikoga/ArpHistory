<data>
	<input class="key" name="input" />
	<faceList name="fl">0,1,2,3,4,5,6,7,a,b,c,d,e,f,g,h</faceList>
	<tileInfo name="ti" enterableRange="0..7" />
	<chip name="gridChip" class="grid" chipWidth="32" chipHeight="32" baseX="16" baseY="16" dirs="4">
		<faceList ref="fl" />
		<texture class="file">
			<file class="resource" src="a" />
		</texture>
	</chip>
	<driver class="inputLinear" name="inputLinear" input="input" speed="4" />
	<driver class="motion" dHitType="solid" willReact="true" >
		<motionSet initMotion="init">
			<motion name="init" key="init" time="32" loopAction="loop">
				<motionFrame time="0" params="dir:right:dir" dY="-4" hitFrame="hit" />
				<motionFrame time="4" params="dir:down:dir" dY="-3" hitFrame="hit" />
				<motionFrame time="8" params="dir:left:dir" dY="-2" hitFrame="hit" />
				<motionFrame time="12" params="dir:up:dir" dY="-1" hitFrame="hit" />
				<motionFrame time="16" params="dir:right:dir" dY="1" hitFrame="hit" />
				<motionFrame time="20" params="dir:down:dir" dY="2" hitFrame="hit" />
				<motionFrame time="24" params="dir:left:dir" dY="3" hitFrame="hit" />
				<motionFrame time="28" params="dir:up:dir" dY="4" hitFrame="hit" />
				<reactFrame time="4" duration="4" />
			</motion>
			<motion name="stop" key="stop" time="32" loopAction="loop">
				<nextMotion action="loop" motion="walk" />
			</motion>
			<motion name="walk" key="walk" time="32" loopAction="loop">
				<motionFrame time="0" params="6,dir:right:dir" dX="1" hitFrame="hit" />
				<motionFrame time="8" params="7" dX="1" hitFrame="hit" />
				<motionFrame time="16" params="6,dir:90:dir" dY="1" hitFrame="hit" />
				<motionFrame time="24" params="7" dY="1" hitFrame="hit" />
			</motion>
			<nextMotion action="loop" motion="stop" />
		</motionSet>
	</driver>
	<hitFrame class="cuboid" name="hit" hitCuboid="0,0,0,8,8,8" hitType="solid" />
	<hitFrame class="cuboid" name="field" hitCuboid="0,0,0,9999,9999,9999" hitType="solid" />

	<field name="root" heat="warm">
		<mortal name="tileMap" class="tileMap" hitFrame="field">
			<chip ref="gridChip" />
			<tileMap class="string" faceList="fl" tileInfo="ti">
				aaaaaaaa
				a000000a
				a000000a
				a000000a
				01234567
				23456701
				abcdefgh
				cdefgha_
			</tileMap>
		</mortal>
		<mortal name="mortal" class="chip" position="80,32" params="6" hitFrame="hit">
			<chip ref="gridChip" />
			<driver ref="inputLinear" />
		</mortal>
	</field>
	<console name="console">
		<camera key="main" field="/root" position="0,0" />
	</console>
</data>
